  <% end %>
      
  <%= render 'partials/navbar' %> 

  <%= render 'shared/tags' %>
  <br>
  <%= link_to "New note", new_note_path, class: "btn btn-primary rounded-3 h-auto w-auto mx-2 my-2"  %>

  <%= render 'shared/index_content' %>

  <%= render 'partials/footer' %>
</body>
</html>